- model_class = Review
.page-header
  %h1=t '.title', :default => "#{User.find(@review.user_id).email}'s Review of #{@book.title}"

%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @review.text

= link_to t('.back', :default => t("helpers.links.back")), book_reviews_path(@review.book), :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_book_review_path(@review.book, @review), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), book_review_path(@review.book, @review), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
